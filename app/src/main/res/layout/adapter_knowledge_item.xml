<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wiki_container_cl"
    android:paddingBottom="@dimen/common_margin_10">

    <ImageView
        android:layout_width="@dimen/common_margin_100"
        android:layout_height="@dimen/common_margin_100"
        android:id="@+id/wiki_cover_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wiki_title_tv"
        android:maxLines="2"
        android:maxEms="20"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/wiki_cover_iv"
        app:layout_constraintTop_toTopOf="@id/wiki_cover_iv"
        android:layout_marginTop="@dimen/common_margin_10"
        android:layout_marginStart="@dimen/common_margin_10"
        android:text="我是标题"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/wiki_content_tv"
        android:maxLines="5"
        android:maxEms="100"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/wiki_cover_iv"
        app:layout_constraintTop_toBottomOf="@id/wiki_title_tv"
        android:layout_marginTop="@dimen/common_margin_10"
        android:layout_marginStart="@dimen/common_margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/common_margin_10"
        android:text="我是内容"
        android:textSize="15sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>